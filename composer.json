{
    "name": "php-vcr",
    "description": "Extension of php-vcr that records oAuth extensions as well.  Record your test suite's HTTP interactions and replay them during future test runs for fast, deterministic, accurate tests.",
    "license": "MIT",

    "authors": [
        {
            "name": "Kitty Tang",
            "email": "thepinkcodemonkey@gmail.com"
        }
    ],

    "require": {
        "ext-curl": "*",
        "guzzle/http": "3.*",
        "beberlei/assert": "2.*",
        "symfony/yaml": "2.*"
    },

    "require-dev": {
        "phpunit/phpunit": "3.*",
        "mikey179/vfsStream": "1.2.*",
        "lapistano/proxy-object": "dev-master"
    },

    "autoload": {
        "classmap": ["src/"]
    }
}
